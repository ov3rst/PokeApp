<div
  class="modal fade"
  id="delete-modal"
  tabindex="-1"
  aria-labelledby="delete-modal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-black border-0">
        <h5 class="modal-title">Delete {{title}}</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body bg-dark rounded-bottom-3">
        <form action="/{{routeName}}/delete" method="post" id="delete-form">
          <input
            type="hidden"
            value=""
            id="delete-input"
            name="{{routeName}}ID"
          />
          <h3 class="fw-semibold mt-2 mb-5 text-center">Are you sure you want to
            delete this
            {{routeName}}?</h3>
          <button
            type="submit"
            class="btn btn-danger float-end"
          >Confirm</button>
          <button
            type="button"
            class="btn btn-secondary float-end me-2"
            data-bs-dismiss="modal"
          >Cancel</button>
        </form>
      </div>
    </div>
  </div>
</div>